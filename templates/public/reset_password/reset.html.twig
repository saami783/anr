{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    <div class="container page-content">
        <div class="row">
            <h2 class="text-lg-center mb-lg-4">Réinitialisez votre mot de passe</h2>

            <div class="col-md-12 col-lg-4 mx-lg-auto">

                {{ form_start(resetForm) }}
                <div class="form-floating mb-lg-5">
                    {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-input'}}) }}

                </div>
                <button class="btn btn-secondary">Réinitialiser</button>
                {{ form_end(resetForm) }}

            </div>
        </div>
    </div>

{% endblock %}
