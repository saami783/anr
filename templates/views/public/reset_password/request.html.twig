{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    <div class="container page-content">
        <div class="row">
            <h2 class="text-lg-center mb-lg-4">Réinitialisez votre mot de passe</h2>

            <div class="col-md-12 col-lg-4 mx-lg-auto">

                <div class="text-lg-center mb-lg-5">
                    <small>
                        Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de
                        passe.
                    </small>
                </div>

                {{ form_start(requestForm) }}
                <div class="form-floating mb-lg-5">
                    {{ form_widget(requestForm.email, {'attr': {'class': 'form-input'}}) }}
                    {{ form_label(requestForm.email) }}
                </div>
                <button class="btn btn-secondary">Réinitialiser</button>
                {{ form_end(requestForm) }}

            </div>
        </div>
    </div>

{% endblock %}
